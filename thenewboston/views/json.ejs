
<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>

    <% include templates/header.ejs %>

    <h1>Install Express.js</h1>

    <h3><%= name %></h3>

        <h3><%= points %></h3>
    
       <h4> <%= videodata.categoryName %></h4>

        <h4> <%= videodata.categories.categoryDescription %></h4>

       <i>Category Name</i>
       <ul>
        <% videodata.categories.forEach(function(item){ %>

                <li> <%=  item.categoryName %> :<br>
                     <%= item.categoryDescription %> </li>
            <% }); %>
       </ul>


       <h4>Links to Category ID</h4>
        <ul>
        <% videodata.categories.forEach(function(item){ %>

                <li><a href=<%="localhost:3000/json/"+item.categoryID.toString()%>><%=item.categoryName%></a></li>

            <% }); %>
       </ul>

       <h4>Links to Video Count</h4>
        <ul>
        <% videodata.categories.forEach(function(item){ %>

                <li><a href=<%="https://thenewboston.com/videos_food.php?cat="+item.videosCount.toString()%>><%=item.categoryName%></a></li>

            <% }); %>
       </ul>

   </body>
</html>
