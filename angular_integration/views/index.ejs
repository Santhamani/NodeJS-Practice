<!doctype html>
<html lang="en" ng-app="myModule">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Angular js Task1</title>
    <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="css/bootstrap-theme.min.css">
    <link rel="stylesheet" type="text/css" href="css/styles.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
 	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<script src="lib/angular/angular.js"></script>
	<script src="lib/dirPagination.js"></script>
	<script src="public/app/app.js"></script>
  </head>
  <body  ng-controller="empController">
	<div role="main" class="container theme-showcase">
      <div class="" style="margin-top:80px;">
        <div class="col-md-8">
        	<div class="container">
				

				<!--To add employee-->
				
					
						<div class="col-md-12" align="center"> 
							<button class="btn btn-primary btn-sm" data-target="#addemp" data-toggle="modal">ADD</button>

							<button class="btn btn-primary btn-sm" data-target="#delemp" data-toggle="modal">DELETE</button>

							<button class="btn btn-primary btn-sm" data-target="#updateemp" data-toggle="modal">UPDATE</button>

							<div class="modal" id="addemp">
								<div class="modal-dialog">
									<div class="model-content">

										<div class="modal-header"> 
										<button class="close" data-dismiss="modal">&times;</button>
										<h4 class="model-title">Add Employee</h4>
										</div>
									
										<div class="modal-body">
											<form>
												<div class="form-group">
													<label for="inputid">Id</label>
													<input class="form-control" type="text" placeholder="Employee id" ng-model="id">
													
												</div>
												<div class="form-group">
													<label for="inputfirstName">First Name</label>
													<input class="form-control" type="text" placeholder="Employee first name" ng-model="firstName">
													
												</div>
												<div class="form-group">
													<label for="inputlastName">Last Name</label>
													<input class="form-control" type="text" placeholder="Employee last name" ng-model="lastName">
													
												</div>
												<div class="form-group">
													<label for="inputgender">Gender</label>
													<input class="form-control" type="text" placeholder="Gender" ng-model="gender">
													
												</div>
													<div class="form-group">
													<label for="inputsalary">Salary</label>
													<input class="form-control" type="text" placeholder="Employee salary" ng-model="salary">
													
												</div>

												<button type="submit" class="btn btn-default" ng-click="addItem()"> Add </button>
												<button type="submit" class="btn btn-default" data-dismiss="modal"> Cancel </button>

											</form>

										</div>
									</div>
								<!--	<div class="btn btn-primary"> ADD </div>-->
								</div>
							</div>
							<!--To remove employee-->
							<div class="modal" id="delemp">
								<div class="modal-dialog">
									<div class="model-content">

										<div class="modal-header"> 
										<button class="close" data-dismiss="modal">&times;</button>
										<h4 class="model-title">Delete Employee</h4>
										</div>
									
										<div class="modal-body">
											<form>
												<div class="form-group">
													<label for="inputid">Id</label>
													<input class="form-control" type="text" placeholder="Employee Id" ng-model="id">
													
												</div>
												
												<button type="submit" class="btn btn-default" ng-model="id" ng-click="delItem('id')"> Delete </button>
												<button type="submit" class="btn btn-default" data-dismiss="modal"> Cancel </button>

											</form>

										</div>
									</div>
								<!--	<div class="btn btn-primary"> ADD </div>-->
								</div>
							</div>
						</div>
						<div class="page-header">
									<h2 id="tables">Angular js Task-1</h2>
						</div>
					
				</div>

				
					<table class="table table-hover">
						<thead>
							<tr>
								<th ng-click="sort('id')">Id
									<span class="glyphicon sort-icon" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
								</th>
								<th ng-click="sort('firstName')">First Name
									<span class="glyphicon sort-icon" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
								</th>
								<th ng-click="sort('lastName')">Last Name
									<span class="glyphicon sort-icon" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
								</th>
								<th ng-click="sort('gender')">Gender
									<span class="glyphicon sort-icon" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
								</th>
								<th ng-click="sort('salary')">Salary
									<span class="glyphicon sort-icon" ng-class="{'glyphicon-chevron-up':reverse,'glyphicon-chevron-down':!reverse}"></span>
								</th>
							</tr>
						</thead>
						<tbody>
							<tr dir-paginate="emp in employees|itemsPerPage:5|orderBy : sortKey:reverse"><!--|orderBy:sortKey:reverse-->
								<td>{{emp.id}}</td>
								<td>{{emp.firstName}}</td>
								<td>{{emp.lastName}}</td>
								<td>{{emp.gender}}</td>
								<td>{{emp.salary}}</td>
							</tr>
						</tbody>
						</table>
						<center>
							<dir-pagination-controls
								max-size="5"
								direction-links="true"
								boundary-links="true" >
							</dir-pagination-controls>
						</center>
				

			</div>
		</div>
	</div>
  </body>
</html>
