<html ng-app="myApp">
<head>
	<title>Form Validation</title>
	<script type="text/javascript" src="app/formapp.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js"></script>
